<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/wihte"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <include layout="@layout/top_title_layout" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="爱车信息"
            android:textSize="16sp"
            android:textColor="@color/nomarl_gray" />

        <Spinner
            android:id="@+id/rst_brand"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="2"
            android:animationCache="true"
            android:background="@drawable/spinner_selector"
            android:drawSelectorOnTop="true"
            android:padding="0dip"
            android:textColor="#6d6d6d"
            android:textSize="12sp" />

        <Spinner
            android:id="@+id/rst_series"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="2"
            android:animationCache="true"
            android:background="@drawable/spinner_selector"
            android:drawSelectorOnTop="true"
            android:padding="0dip"
            android:textColor="#6d6d6d"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="爱车信息"
            android:textColor="@color/more_gray"
            android:visibility="invisible" />

        <Spinner
            android:id="@+id/rst_model"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:layout_marginLeft="5dp"
            android:animationCache="true"
            android:background="@drawable/spinner_selector"
            android:drawSelectorOnTop="true"
            android:padding="0dip"
            android:textColor="#6d6d6d"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="30dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="车牌号码"
            android:textSize="16sp"
            android:textColor="@color/nomarl_gray" />

        <EditText
            android:id="@+id/car_num"
            android:layout_width="0dp"
            android:layout_marginLeft="5dp"
            android:layout_height="wrap_content"
             android:textColor="#6d6d6d"
            android:layout_weight="4" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="30dp"
        android:orientation="horizontal" 
        android:gravity="right">

        <TextView
            android:id="@+id/buy_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:text="去支付"
            android:textColor="@color/wihte"
            android:background="@drawable/style_btn_bg"/>
    </LinearLayout>

</LinearLayout>