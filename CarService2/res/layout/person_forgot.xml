<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/wihte"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/fot_finish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:background="@drawable/back" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/fot_phone"
            style="@style/editStyle"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/rst_phone"
            android:hint="请输入手机号"
            android:gravity="center"
            android:paddingRight="40dp"
            android:inputType="phone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp" >

            <EditText
                android:id="@+id/fot_code"
                style="@style/editStyle"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:hint="短信验证码"
                android:inputType="phone" />

            <TextView
                android:id="@+id/fot_getcode"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:background="@drawable/ok_btn_bg"
                android:gravity="center"
                android:text="获取验证码"
                android:textColor="@color/wihte" />
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp" >

            <EditText
                android:id="@+id/fot_pwd"
                style="@style/editStyle"
                android:gravity="center"
                android:hint="输入新密码" />

            <FrameLayout
                android:id="@+id/fot_openpwd"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingRight="10dp"
                android:layout_gravity="right|center_vertical" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/open_pwd" />
            </FrameLayout>
        </FrameLayout>

        <TextView
            android:id="@+id/fot_commit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:background="@drawable/style_btn_bg"
            android:gravity="center"
            android:textColor="@color/wihte"
             android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="提交"
            android:textSize="20sp" />
    </LinearLayout>

</LinearLayout>