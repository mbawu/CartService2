<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/coupon_layout"
        style="@style/linearLayout_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/coupon_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/coupon_price_bg"
            android:gravity="center"
            android:text="100元"
            android:textColor="@color/wihte"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:gravity="center_vertical"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/coupon_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="100元优惠券全场使用"
                        android:textColor="@color/nomarl_gray"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/coupon_num"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="号码：1504091440041960"
                        android:textColor="@color/nomarl_gray"
                        android:textSize="11sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/coupon_expired"
                    android:layout_width="0dp"
                    android:layout_height="25dp"
                    android:layout_weight="2"
                    android:background="@drawable/add_car_bg"
                    android:gravity="center"
                    android:text="即将过期"
                    android:textColor="@color/wihte"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/coupon_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="状态：未使用"
                    android:textColor="@color/nomarl_gray"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/coupon_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="过期时间：2015-03-27"
                    android:textColor="@color/nomarl_gray"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>