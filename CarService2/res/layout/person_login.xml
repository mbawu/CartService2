<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
	android:orientation="vertical"
	android:background="@color/wihte"
	android:gravity="center_horizontal" >

    <FrameLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView 
            android:id="@+id/login_finish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:background="@drawable/finish"/>
        
    </FrameLayout>

    <ImageView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/head_default"/>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="vertical">
        <EditText 
            android:id="@+id/login_username"
			style="@style/editStyle"
            android:inputType="phone"
            android:gravity="center"
            android:paddingRight="40dp"
            android:drawableLeft="@drawable/username_ico"
            android:hint="请输入手机号"/>
        
        <EditText 
            android:id="@+id/login_pwd"
            style="@style/editStyle"
            android:layout_marginTop="10dp"
            android:inputType="textPassword"
            android:gravity="center"
            android:paddingRight="40dp"
            android:drawableLeft="@drawable/password_ico"
            android:textSize="16sp"
            android:hint="请输入密码"/>
        
        <TextView 
            android:id="@+id/login_btn"
            android:layout_marginTop="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="@color/wihte"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:background="@drawable/style_btn_bg"
            android:text="登 录"/>
        
        <TextView 
            android:id="@+id/login_forgot"
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:textSize="16sp"
            android:textColor="@color/style_color"
            android:text="忘记密码？"/>
        <TextView 
            android:id="@+id/login_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="@color/style_color"
            android:background="@drawable/white_btn_bg"
            android:text="注册"/>
    </LinearLayout>
</LinearLayout>
