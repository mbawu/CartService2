<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
	android:orientation="vertical"
	android:background="@color/wihte"
	android:gravity="center_horizontal" >

    <FrameLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView 
            android:id="@+id/login_finish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:background="@drawable/back"/>
        
    </FrameLayout>

    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="vertical">
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        
        <EditText 
            android:layout_weight="1"
            android:id="@+id/name"
			style="@style/editStyle"
			android:gravity="center"
			android:layout_width="100dp"
            android:hint="姓氏"/>
        <RadioGroup 
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">
            <RadioButton 
                 android:id="@+id/rst_man"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/radio_selector"
                android:layout_marginLeft="10dp"
                android:checked="true"
                android:textColor="@color/more_gray"
                android:text="先生"/>
            <RadioButton 
                android:id="@+id/rst_lady"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/radio_selector"
                android:textColor="@color/more_gray"
                android:layout_marginLeft="10dp"
                android:text="女士"/>
        </RadioGroup>
        
        </LinearLayout>
        
        <EditText 
            android:id="@+id/login_pwd"
            style="@style/editStyle"
            android:layout_marginTop="10dp"
            android:inputType="textPassword"
            android:drawableLeft="@drawable/password_ico"
            android:hint="请输入密码"/>
        
        <TextView 
            android:id="@+id/login_btn"
            android:layout_marginTop="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="@color/wihte"
            android:background="@drawable/login_btn"
            android:text="登 录"/>
        
        <TextView 
            android:id="@+id/login_forgot"
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:textSize="16sp"
            android:textColor="@color/style_color"
            android:text="忘记密码？"/>
        <TextView 
            android:id="@+id/login_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="@color/style_color"
            android:background="@drawable/login_register"
            android:text="注册"/>
    </LinearLayout>
</LinearLayout>
