<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/wihte"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/rst_finish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:background="@drawable/back" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <EditText
                android:id="@+id/rst_name"
                style="@style/editStyle"
                android:layout_width="100dp"
                android:layout_weight="1"
                android:gravity="center"
                android:hint="姓氏" />

            <RadioGroup
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:gravity="center"
                android:orientation="horizontal" >

                <RadioButton
                    android:id="@+id/rst_man"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:button="@drawable/radio_selector"
                    android:checked="true"
                    android:text=" 先生"
                    android:textColor="@color/more_gray" />

                <RadioButton
                    android:id="@+id/rst_lady"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:button="@drawable/radio_selector"
                    android:text=" 女士"
                    android:textColor="@color/more_gray" />
            </RadioGroup>
        </LinearLayout>

        <EditText
            android:id="@+id/rst_phone"
            style="@style/editStyle"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/rst_phone"
            android:gravity="center"
            android:hint="请输入手机号"
            android:inputType="phone" />

        <Spinner
            android:id="@+id/rst_brand"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/box_normal"
            android:drawSelectorOnTop="true"
            android:paddingTop="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp" >

            <EditText
                android:id="@+id/rst_code"
                style="@style/editStyle"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:hint="短信验证码"
                android:inputType="phone" />

            <TextView
                android:id="@+id/rst_getcode"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:background="@color/style_color"
                android:gravity="center"
                android:text="获取验证码"
                android:textColor="@color/wihte" />
        </LinearLayout>

        <EditText
            android:id="@+id/rst_pwd"
            style="@style/editStyle"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:hint="输入新密码"
            android:inputType="textPassword" />

        <TextView
            android:id="@+id/rst_error"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/error_ico"
            android:text="错误提示"
            android:textColor="@color/more_gray"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/rst_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/login_btn"
            android:gravity="center"
            android:text="注册"
            android:textColor="@color/wihte"
            android:textSize="20sp" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp" >

            <RadioButton
                android:id="@+id/rst_contract"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:button="@drawable/radio_selector"
                android:checked="true"
                android:gravity="center"
                android:text=" 同意使用服务条款"
                android:textColor="@color/more_gray" />
        </FrameLayout>
    </LinearLayout>

</LinearLayout>