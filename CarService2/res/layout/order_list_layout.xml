<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include layout="@layout/top_title_layout" />

   <RadioGroup
        android:id="@+id/order_list_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/order_list_all_radiobtn"
            style="@style/type_radio_btn_style"
            android:checked="true"
            android:text="全部" />

        <RadioButton
            android:id="@+id/order_list_underway_radiobtn"
            style="@style/type_radio_btn_style"
            android:text="进行中" />

        <RadioButton
            android:id="@+id/order_list_cancel_radiobtn"
            style="@style/type_radio_btn_style"
            android:text="已取消" />


    </RadioGroup>

    <ListView
        android:id="@+id/listview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/order_list_type"
        android:cacheColorHint="#f5f5f5"
        android:fadingEdge="none"
        android:listSelector="#f5f5f5" />

</LinearLayout>